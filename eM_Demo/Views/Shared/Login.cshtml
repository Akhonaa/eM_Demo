@model eM_Demo.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <div class="overlay"></div>
    <div class="login-card">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email" required />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <div class="password-input">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
                    <span class="toggle-password">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p>Don't have an account? <a href="/Admin/Register">Create one here</a></p>
    </div>
</div>

<style>
    /* Page container to prevent overlapping */
    .register-page {
        position: relative;
        width: 100%;
        min-height: 100vh; /* Ensures the content doesn't stretch unnecessarily */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: auto; /* Allows scrolling without overlapping other elements */
        background-color: #f4f4f4; /* Neutral background color */
        padding: 80px 20px; /* Adds spacing for top navigation bar */
        box-sizing: border-box; /* Includes padding in the height calculation */
    }

    /* Centered card for the register form */
    .register-card {
        position: relative;
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 400px; /* Restricts width of the form */
        width: 100%;
        text-align: center;
        z-index: 2; /* Ensures it stays above the background */
    }

        /* Form header */
        .register-card h2 {
            margin-bottom: 1.5rem;
            color: #2c3e50;
        }

    /* Form groups */
    .form-group {
        margin-bottom: 1.25rem;
        text-align: left;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    /* Password input with toggle icon */
    .password-input {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
    }

    /* Primary button */
    .btn-primary {
        background-color: #2c3e50;
        border: none;
        padding: 0.75rem;
        font-size: 1rem;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    /* Link for registration */
    p {
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        p a {
            color: #2c3e50;
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }
</style>

