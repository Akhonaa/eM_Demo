@model eM_Demo.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="register-page">
    <div class="overlay"></div>
    <div class="register-card">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="First name" required />
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="Surname" required />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email" required />
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <div class="password-input">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
                    <span class="toggle-password">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
        <p>Login <a href="/Admin/Login">here</a></p>
    </div>
</div>

<style>
    /* Full-screen background */
    .register-page {
        position: relative;
        width: 100%;
        height: 80vh;
        /*background: url("~/myAssets/ventilation_bg.jpg"); background-repeat: no-repeat; background-position: center;*/
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin: 70px;
       
    }

    /* Dark overlay for background image
        .overlay {
            position: absolute;
             top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url(/myAssets/ventilation_bg.jpg); background-repeat: no-repeat; background-position: center;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
            }*/

    /* Centered card for login form */
    .register-card {
        position: fixed; /* Change from relative to fixed */
        top: 50%; /* Vertically center the form */
        left: 50%; /* Horizontally center the form */
        transform: translate(-50%, -50%); /* Adjust the position */
        z-index: 2;
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

        .register-card h2 {
            margin-bottom: 1.5rem;
            color: #2c3e50;
        }

    .form-group {
        margin-bottom: 1.25rem;
        text-align: left;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    /* Password input with toggle icon */
    .password-input {
        position: relative;
    }

    
    .toggle-password {
        position: absolute;
         top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .btn-primary {
        background-color: #2c3e50;
        border: none;
        padding: 0.75rem;
        font-size: 1rem;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #34495e;
        }

    /* Link for registration */
    p {
        margin-top: 1rem;
        font-size: 0.9rem;
    }

        p a {
            color: #2c3e50;
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }
</style>

